<%- include('header')%>


        <!-- Content Wrapper. Contains page content -->
        <div class="content-wrapper">
            <!-- Content Header (Page header) -->
            <section class="content-header">
                <div class="container-fluid">
                    <div class="row mb-2">
                        <div class="col-sm-6">
                            <h1>Sub Category</h1>
                        </div>
                        <div class="col-sm-6">
                            <ol class="breadcrumb float-sm-right">
                                <li class="breadcrumb-item"><a href="#">Home</a></li>
                                <li class="breadcrumb-item active">Sub Category</li>
                            </ol>
                        </div>
                    </div>
                </div>
                <!-- /.container-fluid -->
            </section>

            <!-- Main content -->
            <section class="content">

                <!-- Default box -->


                <!-- /.row -->
                <div class="row">
                    <div class="col-12">
                        <div class="card">
                            <div class="card-header">
                                <h3 class="card-title">Sub Category</h3>

                                <!-- <div class="card-tools">
                                    <div class="input-group input-group-sm" style="width: 150px;">
                                        <input type="text" name="table_search" class="form-control float-right"
                                            placeholder="Search">

                                        <div class="input-group-append">
                                            <button type="submit" class="btn btn-default">
                                                <i class="fas fa-search"></i>
                                            </button>
                                        </div>
                                    </div>
                                </div> -->
                            </div>
                            <!-- /.card-header -->
                            <div class="card-body table-responsive p-0" style="height: 300px;">
                                <table class="table table-head-fixed text-nowrap" id="table">
                                    <thead>
                                        <tr>
                                            <th>Sr.No</th>
                                            <th>Sub_cat_id</th>
                                            <th>Main Category</th>
                                            <th>Sub Category</th>
                                            <!-- <th>VAT Number</th>
                                            <th>Phone</th>
                                            <th>Website</th>
                                            <th>Address</th>
                                            <th>City</th>
                                            <th>State</th>
                                            <th>Zip Code</th> -->
                                            <th>More</th>

                                        </tr>
                                    </thead>

                                    <tbody>
                                        
                                        <% for(var srno = 1 , i=0 ; i < cat.length; i++ , srno++){%>
                                            <tr>
                                                <td>
                                                    <%= srno%>
                                                </td>
                                                <td>
                                                    <%= cat[i].sub_cat_id %>
                                                </td>
                                                <td>
                                                    <%= cat[i].Name%>
                                                </td>
                                                <td>
                                                    <%= cat[i].sub_category%>
                                                </td>
                                              
                                                <td>
                                                    <!-- <a class="add" title="Add" data-toggle="tooltip"><i
                                                            class="material-icons">&#xE03B;</i></a> -->
                                                    <a href="/users/edit_sub_category/<%=cat[i].sub_cat_id %>" class="edit" title="Edit" data-toggle="tooltip"><i
                                                            class="material-icons">&#xE254;</i></a>
                                                    <a href="../users/sub_category_delete/<%= cat[i].sub_cat_id %>" class="delete" title="Delete"
                                                        onclick="return confirm('Are You sure?')" data-toggle="tooltip"><i
                                                            class="material-icons">&#xE872;</i></a>
                                                </td>
                                            </tr>
                                            <%}%>
                                    </tbody>
                                </table>
                            </div>
                            <!-- /.card-body -->
                        </div>
                        <!-- /.card -->
                    </div>
                </div>
                <!-- /.row -->
                <div class="col-sm-3">
                    <a href="/users/add_sub_category">
                        <button type="button" class="btn btn-block btn-outline-primary">Add Sub Category</button>
                    </a>
                </div>

                <!-- /.card -->

            </section>
            <!-- /.content -->
        </div>
        <!-- /.content-wrapper -->

        <%- include('footer')%>