<%- include('header')%>



        <!-- Content Wrapper. Contains page content -->
        <div class="content-wrapper">
            <!-- Content Header (Page header) -->
            <section class="content-header">
                <div class="container-fluid">
                    <div class="row mb-2">
                        <div class="col-sm-6">
                            <h1>Customers Details</h1>
                        </div>
                        <div class="col-sm-6">
                            <ol class="breadcrumb float-sm-right">
                                <li class="breadcrumb-item"><a href="#">Home</a></li>
                                <li class="breadcrumb-item active">Customer Details</li>
                            </ol>
                        </div>
                    </div>
                </div>
                <!-- /.container-fluid -->
            </section>

            <!-- Main content -->
            <section class="content">

                <!-- Default box -->


                <!-- /.row -->
                <div class="row">
                    <div class="col-12">
                        <div class="card">
                            <div class="card-header">
                                <h3 class="card-title">Your Customer Details</h3>

                                <!-- <div class="card-tools">
                                    <div class="input-group input-group-sm" style="width: 150px;">
                                        <input type="text" name="table_search" class="form-control float-right"
                                            placeholder="Search">

                                        <div class="input-group-append">
                                            <button type="submit" class="btn btn-default">
                                                <i class="fas fa-search"></i>
                                            </button>
                                        </div>
                                    </div>
                                </div> -->
                            </div>
                            <!-- /.card-header -->
                            <div class="card-body table-responsive p-0" style="height: 300px;">
                                <table class="table table-head-fixed text-nowrap" id="table">
                                    <thead>
                                        <tr>
                                            <th>Sr.No</th>
                                            <th>Customer Id</th>
                                            <th>Customer Name</th>
                                            <th>Company Name</th>
                                            <th>GST Number</th>
                                            <th>Contact No</th>
                                            <th>Email ID</th>
                                            <th>Company Address</th>
                                            <th>City</th>
                                            <th>State</th>
                                            <th>Zip Code</th>
                                            <th>Date</th>
                                            <!-- <th>Time</th>
                                            <th>More</th> -->

                                        </tr>
                                    </thead>

                                    <tbody>
                                        <% for(var srno = 1 , i=0 ; i < result.length; i++ , srno++){%>
                                            <tr>
                                                <td>
                                                    <%= srno%>
                                                </td>
                                                <td>
                                                    <%= result[i].customer_id %>
                                                </td>
                                                <td>
                                                    <%= result[i].customer_name %>
                                                </td>
                                                <td>
                                                    <%= result[i].company_name%>
                                                </td>
                                                <td>
                                                    <%= result[i].GST_number%>
                                                </td>
                                                <td>
                                                    <%= result[i].contact_number%>
                                                </td>
                                                <td>
                                                    <%= result[i].email_id %>
                                                </td>
                                                <td>
                                                    <%= result[i].company_address %>
                                                </td>
                                                <td>
                                                    <%= result[i].city %>
                                                </td>
                                                <td>
                                                    <%= result[i].state %>
                                                </td>
                                                <td>
                                                    <%= result[i].zip_code %>
                                                </td>
                                                <!-- <td>
                                                    <%= result[i].date %>
                                                </td>
                                                <td>
                                                    <%= result[i].time %>
                                                </td> -->
                                                <td>

                                                    <!-- <a class="add" title="Add" data-toggle="tooltip"
                                                        href="#"><i
                                                            class="material-icons">&#xE03B;</i></a> -->
                                                    <a href="/users/edit_customer_inquiry/<%= result[i].customer_id%>" class="edit" title="Edit" data-toggle="tooltip"><i
                                                            class="material-icons">&#xE254;</i></a>
                                                    <a class="delete" title="Delete"
                                                        onclick="return confirm('Are You sure?')" data-toggle="tooltip"
                                                        href="../users/customer_inquiry_delete/<%= result[i].customer_id%>"><i
                                                            class="material-icons">&#xE872;</i></a>
                                                </td>

                                            </tr>
                                            <%}%>
                                    </tbody>
                                </table>
                            </div>
                            <!-- /.card-body -->
                        </div>
                        <!-- /.card -->
                    </div>
                </div>
                <!-- /.row -->
                <div class="col-sm-3">
                    <a href="/users/add_customer_inquiry">
                        <button type="button" class="btn btn-block btn-outline-primary">Add Inquiry</button>
                    </a>
                    <!-- <a href="./smswebapp_creategroup.html">
                        <button type="button" class="btn btn-block btn-outline-success">Create Group</button>
                    </a> -->
                </div>

                <!-- /.card -->

            </section>
            <!-- /.content -->
        </div>
        <!-- /.content-wrapper -->

        <%- include('footer')%>