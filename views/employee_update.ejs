<%- include('update_header')%>


        <!-- Content Wrapper. Contains page content -->
        <div class="content-wrapper">
            <!-- Content Header (Page header) -->
            <section class="content-header">
                <div class="container-fluid">
                    <div class="row mb-2">
                        <div class="col-sm-6">
                            <h1>Employee</h1>
                        </div>
                        <div class="col-sm-6">
                            <ol class="breadcrumb float-sm-right">
                                <li class="breadcrumb-item"><a href="#">Home</a></li>
                                <li class="breadcrumb-item active">Customer</li>
                            </ol>
                        </div>
                    </div>
                </div>
                <!-- /.container-fluid -->
            </section>

            <!-- Main content -->
            <section class="content">
                <div class="container-fluid">
                    <div class="row">
                        <!-- left column -->
                        <div class="col-md-12">
                            <!-- jquery validation -->
                            <div class="card card-primary">
                                <div class="card-header">
                                    <h3 class="card-title">Update Employee<small></small></h3>
                                </div>
                                <!-- /.card-header -->
                                <!-- form start -->
                                <form id="quickForm" action="/users/employee_update/<%= Uid%>" method="POST" name="form1">
                                    <div class="card-body">
                                        <div class="form-group">
                                            <label>Name</label>
                                            <input type="text" name="employee_name"  class="form-control" placeholder="Enter Company ..." value='<%=employee_name%>' required>
                                        </div>
                                        <div class="form-group">
                                            <label>Number</label>
                                            <input type="text" name="mobile_number" class="form-control" placeholder="Enter VAT Number..." value='<%=mobile_number %>'  pattern="[0-9]{5}[0-9]{5}" required>
                                        </div>
                                        <div class="form-group">
                                            <label>Alternate_mb_no</label>
                                            <input type="text" name="alternate_mb_no" class="form-control" placeholder="Enter Your Mobile Number..." value='<%=alternate_mb_no %>'  pattern="[0-9]{5}[0-9]{5}" required>
                                        </div>
                                        <div class="form-group">
                                            <label>Email</label>
                                            <input type="text" name="email_id" class="form-control" placeholder="Enter Website..." value='<%=email_id %>' required>
                                        </div>
                                        <div class="form-group">
                                            <label>Date</label>
                                            <input type="date" name="DOB" class="form-control" placeholder="Enter Your Address..." value="<%=DOB%>" required>
                                        </div>
                                        <div class="form-group">
                                            <label>Address</label>
                                            <input type="text" name="address" class="form-control" placeholder="Enter city name..." value="<%= address %>" required>
                                        </div>
                                        <div class="form-group">
                                            <label>Password</label>
                                            <input type="text" name="password" class="form-control" placeholder="Enter State..." value="<%=password %>" required>
                                        </div>
                                     
                                        <div class="form-group mb-0">
                                            <!-- <div class="custom-control custom-checkbox">
                        <input type="checkbox" name="terms" class="custom-control-input" id="exampleCheck1">
                        <label class="custom-control-label" for="exampleCheck1">I agree to the <a href="#">terms of service</a>.</label>
                      </div> -->
                                        </div>
                                    </div>
                                    <!-- /.card-body -->
                                    <div class="card-footer">
                                        <button type="submit" class="btn btn-primary">Update</button>
                                    </div>
                                </form>
                            </div>
                            <!-- /.card -->
                        </div>
                        <!--/.col (left) -->
                        <!-- right column -->
                        <div class="col-md-6">

                        </div>
                        <!--/.col (right) -->
                    </div>
                    <!-- /.row -->
                </div>
                <!-- /.container-fluid -->
            </section>
            <!-- /.content -->
        </div>
        <!-- /.content-wrapper -->

        <%- include('update_footer')%>